<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory android:title="@string/notifications_settings">
                <SwitchPreference
                    android:title="@string/notifications_settings_title_active"
                    android:summary="@string/notifications_settings_summary_active"
                    android:key="notification_active"/>

                <ListPreference
                    android:title="@string/notifications_settings_title_time"
                    android:summary="@string/notifications_settings_summary_time"
                    android:key="notification_time"
                    android:entryValues="@array/list_values_time"
                    android:entries="@array/list_entries_time"/>
                <ListPreference
                    android:title="@string/notifications_settings_title_kind"
                    android:summary="@string/notifications_settings_summary_kind"
                    android:key="notification_kind"
                    android:entryValues="@array/list_values_kind"
                    android:entries="@array/list_entries_kind"/>
        </PreferenceCategory>
</PreferenceScreen>